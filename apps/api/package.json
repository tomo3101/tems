{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./hc": {
      "import": {
        "import": "./dist/src/hc.js",
        "types": "./dist/src/hc.d.ts"
      }
    },
    "./schema/*": {
      "import": {
        "import": "./dist/src/application/schemas/*.js",
        "types": "./dist/src/application/schemas/*.d.ts"
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint \"src/**/*.ts*\" --max-warnings 0",
    "start": "node ./dist/src/index.js",
    "push": "drizzle-kit push",
    "remove-dist": "rm -rf dist"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "bcrypt": "^5.1.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.6.18",
    "mysql2": "^3.12.0",
    "react": "^19.0.0",
    "resend": "^4.1.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.18.3",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.17.16",
    "@types/react": "^19.0.8",
    "drizzle-kit": "^0.30.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^9.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "zod": "^3.24.1"
  }
}
